{
  "name": "nova-typescript",
  "version": "0.0.1",
  "description": "Nova + Typescript",
  "private": true,
  "workspaces": [
    "types",
    "extension"
  ],
  "author": "Cameron Little",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-nova": "^1.0.0-beta.3",
    "onchange": "^7.0.0",
    "rollup": "^2.7.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "concurrently 'yarn:lint:*'",
    "lint:eslint": "eslint --ignore-path .gitignore \"**/*.{ts,js}\"",
    "lint:prettier": "prettier --ignore-path .gitignore --check \"**/*.{ts,js,json}\"",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:prettier": "prettier --ignore-path .gitignore --write \"**/*.{ts,js,json}\""
  }
}
